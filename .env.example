# Add your Google OAuth client id here (create in Google Cloud Console)
VITE_GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com

# Session & DB (for server-side sessions)
SESSION_SECRET=some-long-random-secret
# Optional rotation (comma-separated, current first):
# SESSION_SECRETS=new-secret,old-secret
SESSION_MAX_AGE_SECONDS=86400

# MySQL / MariaDB connection (used for revocable session storage)
DB_HOST=127.0.0.1
DB_PORT=3306
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_NAME=your_database_name
